<% if (typeof msgDanger!='undefined') { %>
    <div class="alert alert-success">   <i class="fas fa-info"></i>   <%-msgDanger %>
  
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Kapat</span></button>
    </div>
  <% } %>
  
  <section class="header">
      <div class="container">
        <h1 class="title">
          
        </h1>
        <p class="subtitle">
          <strong>SEYAHAT PLANLAMA</strong>
        </p>
      </div>
      <div class="columns is-mobile">
        <div class="column is-1 ml-2"><div class="logout">   <form action="/" method="get"><button class="button is-link" type="submit"><i class="fa fa-map info-button"></i>&nbsp Seyahatler</button></form></div></div>
        <div class="column is-1 ml-4"><div class="logout">   <form action="/plans" method="get"><button class="button is-info" type="submit"><i class="fa fa-suitcase info-button"></i>&nbsp Planlarım</button></form></div></div>
        <div class="column is-half ml-4"><div class="logout">   <form action="/suggestion" method="get"><button class="button is-warning" type="submit"><i class="fa fa-comment info-button"></i>&nbsp Seyahat Önerisi</button></form></div></div>
        <div class="column is-2"></div>
        <div class="column is-1"><div class="logout">   <form action="/logout" method="post"><button class="button is-danger" type="submit"><i class="fa fa-sign-out logout-button"></i>&nbsp Çıkış Yap</button></form></div></div>
      </div>
      
      <hr class="header-hr">
  </section>
  
  

  <section class="section" id="main-content">
    <div class="columns is-multiline">
      <div class="column m-auto is-6">
       
        
       
            <%- include("./partials/plan_card.ejs", { "isMyPlan":false , "imgUrl": imgUrl,
            "name":location.name,"category":location.category,"description":location.description,"lat":location.latitude,"long":location.longitude }) %>
        
    </div>

      <div class="column m-auto is-6">
        <div class="card">
            <div class="col-lg-12">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Seyahat Zamanını Planlayın!</h1>
                </div>
                <form class="user" action="/add-plan" method="post">
                    <div class="form-group">
                        <input type="hidden" class="form-control form-control-user" id="exampleFirstName"
                                        placeholder="Seyahat ID"
                                        name="locationId"
                                        value=<%=location.id%>
                                        >
                    </div>
                    <div class="form-group">
                        <input type="datetime" class="form-control form-control-user" id="exampleFirstName"
                                        placeholder="Seyahat Adı"
                                        name="title"
                                        value="<%=location.name%>"
                                        >
                    </div>
                    <div class="form-group">
                        <input type="datetime-local" class="form-control form-control-user" id="exampleFirstName"
                                        placeholder="Başlangıç Tarihi"
                                        name="startDate"
                                        minlength="1"
                                        >
                    </div>
                    <div class="form-group">
                        <input type="datetime-local" class="form-control form-control-user" id="exampleFirstName"
                                        placeholder="Bitiş Tarihi"
                                        name="endDate"
                                        minlength="1"
                                        >
                    </div>
                
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Planlarıma ekle!
                    </button>
                    <hr>
                </form>
                <hr>
               
            </div>
        </div>
        </div>
        
      </div>
    </div>
  </section>
  